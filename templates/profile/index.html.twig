{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block header %}
    {% include 'base/header.html.twig' %}
{% endblock %}

{% block body %}
    <section class="vh-90" style="background-color: #f4f5f7;">
        <div class="container py-5 h-90">
            <div class="row d-flex justify-content-center align-items-center h-90">
                <div class="col col-lg-8 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white d-flex flex-column align-items-center align-content-center justify-content-center" style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                {% include 'svg/question_icon.html.twig' %}
                                <h5 class="mt-3">{{ app.user.name }}</h5>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Информация</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-12 mb-3">
                                            <h6>Email</h6>
                                            <p class="text-muted">
                                                {{ app.user.email }}
                                            </p>
                                        </div>
                                    </div>
                                    <h6>Статистика</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Задано вопросов</h6>
                                            <!-- TODO question -->
                                            <p class="text-muted">
                                                {{ countQuestions }}
                                            </p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Дано ответов</h6>
                                            <!-- TODO question -->
                                            <p class="text-muted">
                                                {{ countAnswers }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-start">
                                        <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                                        <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                                        <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
    {% include 'base/footer.html.twig' %}
{% endblock %}

